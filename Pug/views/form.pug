doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css")

        
    body(class="container") 
        a(href="/" class="btn btn-secondary") Ir a pagina Principal 
        a(href="/getAll" class="btn btn-secondary") Ver Productos cargados 

        div(class="container" style="margin-top: 50px;")
        form(action="/post" method="post")
            div(class="mb-3")
            label(for="exampleInputEmail1" class="form-label") Nombre del producto
            input(type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name")
            
            div(class="mb-3")
            label(for="exampleInputPassword1" class="form-label") Precio
            input(type="text" class="form-control" id="exampleInputPassword1" name="price")
            
            
            button(type="submit" class="btn btn-primary") Cargar Producto


